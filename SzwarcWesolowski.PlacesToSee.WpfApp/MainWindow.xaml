<Window x:Class="SzwarcWesolowski.PlacesToSee.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzwarcWesolowski.PlacesToSee.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label>This is our beautiful app to show places worth visiting</Label>
        <Button Grid.Row="0" Width="100px" Height="50px" Name="CountryPageButton" Click="CountryPageButton_OnClick">Countries</Button>
        <Button Grid.Row="1" Width="100px" Height="50px" Name="RegionPageButton" Click="RegionPageButton_OnClick">Regions</Button>
        <Button Grid.Row="2" Width="100px" Height="50px" Name="PlacePageButton" Click="PlacePageButton_OnClick">Places</Button>
        <Button Grid.Row="3" Width="100px" Height="50px" Name="Empty" Click="Empty_OnClick">Nothing</Button>
    </Grid>
</Window>
